/* pages/report/report.wxss */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding: 40rpx;
}

.header-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.header-content {
  text-align: center;
  margin-bottom: 32rpx;
}

.report-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
  margin-bottom: 16rpx;
}

.grade-label {
  font-size: 28rpx;
  color: #64748b;
  display: block;
  margin-bottom: 8rpx;
}

.grade-value {
  font-size: 120rpx;
  font-weight: bold;
  color: #3b82f6;
  display: block;
}

.errors-box {
  background: #fef2f2;
  border-left: 4rpx solid #ef4444;
  border-radius: 12rpx;
  padding: 24rpx;
}

.errors-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #dc2626;
  display: block;
  margin-bottom: 16rpx;
}

.errors-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.error-item {
  font-size: 26rpx;
  color: #991b1b;
  padding-left: 24rpx;
  position: relative;
}

.error-item::before {
  content: 'â€¢';
  position: absolute;
  left: 0;
  color: #dc2626;
}

.sections {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.section-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.section-score {
  font-size: 28rpx;
  font-weight: 600;
  color: #3b82f6;
}

.original-text-box {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.original-text-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #64748b;
  display: block;
  margin-bottom: 12rpx;
}

.original-text {
  font-size: 28rpx;
  color: #1e293b;
  line-height: 1.6;
  display: block;
}

.feedback-box {
  margin-top: 24rpx;
}

.feedback-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
  margin-bottom: 16rpx;
}

.dimensions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.dimension-card {
  border-radius: 12rpx;
  padding: 24rpx;
  border-left: 4rpx solid;
}

.dimension-card.accuracy {
  background: #eff6ff;
  border-color: #3b82f6;
}

.dimension-card.coherence {
  background: #f0fdf4;
  border-color: #10b981;
}

.dimension-card.flexibility {
  background: #faf5ff;
  border-color: #a855f7;
}

.dimension-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.dimension-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #1e293b;
}

.dimension-score {
  font-size: 24rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.dimension-card.accuracy .dimension-score {
  background: #dbeafe;
  color: #1e40af;
}

.dimension-card.coherence .dimension-score {
  background: #d1fae5;
  color: #065f46;
}

.dimension-card.flexibility .dimension-score {
  background: #e9d5ff;
  color: #6b21a8;
}

.dimension-text {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.6;
  display: block;
  white-space: pre-wrap;
}

.advice-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.advice-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
  margin-bottom: 16rpx;
}

.advice-text {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.6;
  display: block;
  white-space: pre-wrap;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
}

.btn-secondary {
  background: #ffffff;
  color: #3b82f6;
  border: 2rpx solid #3b82f6;
}



