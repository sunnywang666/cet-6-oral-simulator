/* pages/history/history.wxss */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 48rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #64748b;
  display: block;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-date {
  font-size: 26rpx;
  color: #64748b;
}

.item-grade {
  font-size: 48rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.grade-a {
  background: #dbeafe;
  color: #1e40af;
}

.grade-b {
  background: #d1fae5;
  color: #065f46;
}

.grade-c {
  background: #fef3c7;
  color: #92400e;
}

.grade-d {
  background: #fee2e2;
  color: #991b1b;
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.item-topic {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.item-mode {
  font-size: 24rpx;
  color: #64748b;
}

.item-actions {
  display: flex;
  gap: 16rpx;
}

.btn-view,
.btn-delete {
  flex: 1;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.btn-view {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
}

.btn-delete {
  background: #fee2e2;
  color: #dc2626;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  gap: 32rpx;
}

.empty-icon {
  font-size: 120rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #64748b;
}

.btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  border: none;
}



