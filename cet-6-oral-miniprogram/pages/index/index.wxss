/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.content {
  margin-top: 60rpx;
}

.main-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.icon-wrapper {
  margin-bottom: 40rpx;
}

.icon {
  font-size: 120rpx;
}

.description {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.description text {
  font-size: 32rpx;
  color: #64748b;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 60rpx;
}

.btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
}

.btn-secondary {
  background: #ffffff;
  color: #3b82f6;
  border: 2rpx solid #3b82f6;
}

.features {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.feature-item {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 32rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.feature-icon {
  font-size: 48rpx;
}

.feature-text {
  font-size: 26rpx;
  color: #ffffff;
}



