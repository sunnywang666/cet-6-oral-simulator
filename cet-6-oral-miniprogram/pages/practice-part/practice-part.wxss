/* pages/practice-part/practice-part.wxss */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #64748b;
}

.part-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 60rpx;
}

.part-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 4rpx solid transparent;
  transition: all 0.3s;
}

.part-item.selected {
  border-color: #3b82f6;
  background: #eff6ff;
}

.part-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #3b82f6;
  min-width: 120rpx;
}

.part-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  flex: 1;
}

.part-desc {
  font-size: 24rpx;
  color: #64748b;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx 40rpx;
  background: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  border: none;
}

.btn[disabled] {
  background: #cbd5e1;
  color: #94a3b8;
}



