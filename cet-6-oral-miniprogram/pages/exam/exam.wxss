/* pages/exam/exam.wxss */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding: 40rpx;
}

.exam-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.section-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
  margin-bottom: 16rpx;
}

.section-desc {
  font-size: 28rpx;
  color: #64748b;
  display: block;
  margin-bottom: 8rpx;
}

.section-question {
  font-size: 32rpx;
  color: #3b82f6;
  font-weight: 600;
  display: block;
  margin-top: 16rpx;
}

.card-box {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin: 32rpx 0;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
  margin-bottom: 24rpx;
}

.card-quote {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.6;
  display: block;
}

.transcript-box {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  min-height: 200rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.transcript {
  font-size: 28rpx;
  color: #1e293b;
  line-height: 1.6;
}

.message-box {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 16rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.ai-message {
  background: #eff6ff;
  border-left: 4rpx solid #3b82f6;
}

.message-text {
  font-size: 28rpx;
  color: #1e293b;
  line-height: 1.6;
}

.action-buttons {
  margin-top: 32rpx;
}

.btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  border: none;
}

.processing-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  gap: 32rpx;
}

.processing-icon {
  font-size: 120rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.processing-text {
  font-size: 32rpx;
  color: #64748b;
}



