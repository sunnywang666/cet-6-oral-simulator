/* components/timer/timer.wxss */
.timer-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.timer-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 8rpx solid;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.timer-circle.default {
  border-color: #3b82f6;
  background: #ffffff;
}

.timer-circle.warning {
  border-color: #f59e0b;
  background: #fef3c7;
}

.timer-circle.success {
  border-color: #10b981;
  background: #d1fae5;
}

.timer-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.timer-icon {
  font-size: 32rpx;
  opacity: 0.8;
}

.timer-text {
  font-size: 48rpx;
  font-weight: bold;
  font-family: monospace;
  color: #1e293b;
}

.timer-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #64748b;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.progress-bar {
  width: 100%;
  max-width: 600rpx;
  height: 8rpx;
  background: #e2e8f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-top: 16rpx;
}

.progress-fill {
  height: 100%;
  transition: width 1s linear;
}

.progress-fill.default {
  background: #3b82f6;
}

.progress-fill.warning {
  background: #f59e0b;
}

.progress-fill.success {
  background: #10b981;
}



